# Bool conditions

query II rowsort
SELECT i, CASE WHEN i >= 5 THEN i + 10 END FROM ints;
----
4     NULL
5     15
6     16
NULL  NULL

# Short circuit
query II rowsort
SELECT i, CASE WHEN i >= 5 THEN i + 10
               WHEN i >= 6 THEN i + 20
               END FROM ints;
----
4     NULL
5     15
6     16
NULL  NULL

query II rowsort
SELECT i, CASE WHEN i = 6 THEN i + 10
               WHEN i >= 5 THEN i + 20
       END FROM ints;
----
4     NULL
5     25
6     16
NULL  NULL

# Default case
query II rowsort
SELECT i, CASE WHEN i = 6 THEN i + 10
               WHEN i = 5 THEN i + 20
               ELSE 12
       END FROM ints;
----
4     12
5     25
6     16
NULL  12

# Implicit comparison

query T rowsort
SELECT CASE 4
            WHEN 4 THEN 'a'
            WHEN 5 THEN 'b'
       END;
----
a

query IT rowsort
SELECT i, CASE i
               WHEN 4 THEN 'a'
               WHEN 5 THEN 'b'
       END FROM ints;
----
4     a
5     b
6     NULL
NULL  NULL

query IT rowsort
SELECT i, CASE i + 1
               WHEN 4 THEN 'a'
               WHEN 5 THEN 'b'
       END FROM ints;
----
4     b
5     NULL
6     NULL
NULL  NULL

query IT rowsort
SELECT i, CASE i + 1
               WHEN 4 THEN 'a'
               WHEN 5 THEN 'b'
               ELSE 'cat'
       END FROM ints;
----
4     b
5     cat
6     cat
NULL  cat

