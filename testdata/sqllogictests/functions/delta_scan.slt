# Tests `delta_scan`

# Absolute path (trailing slash)
query IT
select * from delta_scan('file://${PWD}/testdata/delta/table1/') order by a;
----
1   hello
2   world

# Absolute path (no trailing slash)
query IT
select * from delta_scan('file://${PWD}/testdata/delta/table1') order by a;
----
1   hello
2   world

# Relative path
query IT
select * from delta_scan('./testdata/delta/table1/') order by a;
----
1   hello
2   world



# aliases
query IT
select * from read_delta('file://${PWD}/testdata/delta/table1/') order by a;
----
1   hello
2   world
