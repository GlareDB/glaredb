# Time related tests.

query T
SELECT '2011-01-01 00:00:00+03'::TIMESTAMP WITH TIME ZONE;
----
2010-12-31 21:00:00+00

query T
SELECT date_trunc('month', '2011-01-01 00:00:00+03'::TIMESTAMP WITH TIME ZONE);
----
2010-12-01 00:00:00

query T
SELECT date_trunc('year', '2011-01-01 00:00:00+03'::TIMESTAMP WITH TIME ZONE);
----
2010-01-01 00:00:00

# https://github.com/GlareDB/glaredb/issues/1427
#
# Check that `now` returns not the unix epoch
query T
SELECT '1970-01-01T00:00:00Z'::TIMESTAMPTZ <> now();
----
t

query T
SELECT now() > '2023-01-01T00:00:00Z'::TIMESTAMPTZ;
----
t
