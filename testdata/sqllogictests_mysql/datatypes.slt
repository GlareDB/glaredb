# Basic tests for postgres external tables 

# Create an external table that connects to the datatypes tables
statement ok
CREATE EXTERNAL TABLE numeric_datatypes
    FROM mysql
    OPTIONS (
        mysql_conn = '${MYSQL_CONN_STRING}',
        schema = 'glaredb_test',
        table = 'numeric_datatypes'
    );

