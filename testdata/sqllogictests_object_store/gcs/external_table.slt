# Tests for local external tables.

# Credentials
statement ok
CREATE CREDENTIALS gcp_creds PROVIDER gcp
	( service_account_key '${GCP_SERVICE_ACCOUNT_KEY}' );

statement ok
copy ( values (1, 2) ) to 'gs://${GCS_BUCKET_NAME}/ext-table.csv'
	credentials gcp_creds;

statement ok
create external table ext_table from gcs (
	service_account_key '${GCP_SERVICE_ACCOUNT_KEY}',
	bucket '${GCS_BUCKET_NAME}',
	location 'ext-table.csv'
);

query II
select * from ext_table;
----
1	2

# Test "globs"

statement ok
copy ( values (3, 4) ) to 'gs://${GCS_BUCKET_NAME}/ext-table-1.csv'
	credentials gcp_creds;

# Create table using credentials

statement ok
create external table ext_table_1 from gcs
	credentials gcp_creds
	(
		bucket '${GCS_BUCKET_NAME}',
		location 'ext-table*'
	);

query II rowsort
select * from ext_table_1;
----
1	2
3	4

