statement ok
CREATE CREDENTIALS gcp_creds PROVIDER gcp
	( service_account_key '${GCP_SERVICE_ACCOUNT_KEY}' );

# Tests `delta_scan` with delta table in gcs.

query IT
select * from delta_scan('gs://${GCS_BUCKET_NAME}/delta/table1', gcp_creds) order by a;
