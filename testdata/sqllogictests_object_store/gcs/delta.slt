# Tests external delta table in gcs with credentials object.
statement ok
create external table delta_gcs_creds
from delta
credentials gcp_creds
options (
	location 'gs://${GCS_BUCKET_NAME}/delta/table1'
);

query IT
select * from delta_gcs_creds order by a;
----
1   hello
2   world

