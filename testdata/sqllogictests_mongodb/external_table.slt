----
102

statement ok
DROP TABLE external_table;


statement ok
CREATE EXTERNAL TABLE constrained
	FROM mongo
	OPTIONS (
		connection_string = '${MONGO_CONN_STRING}',
		database = 'test',
		collection = 'bikeshare_stations'
	)
	COLUMNS (
	    station_id int,
	    status string,
	    council_district string
	);

query III
SELECT * FROM constrained ORDER BY station_id LIMIT 3;
